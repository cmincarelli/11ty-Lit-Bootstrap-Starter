<div class="container my-5">

  <!-- Hero Section -->
  <section class="row mb-5">
    <div class="col-12 text-center mb-4">
      <h1 class="display-4 fw-bold text-dark mb-3">
        Welcome to Your Site
      </h1>
      <p class="lead text-muted">A modern web starter built with Eleventy, Bootstrap 5, and Lit web components</p>
    </div>
  </section>

  <!-- Features Section -->
  <section class="row mb-5">
    <div class="col-12 text-center mb-4">
      <h2 class="display-6 fw-bold text-dark mb-3">
        <i class="bi bi-tools text-primary me-3"></i>Built-in Features
      </h2>
      <p class="lead text-muted">Everything you need to get started</p>
    </div>
    
    <div class="col-md-4 text-center mb-4">
      <div class="bg-primary text-white p-4 rounded-3 shadow">
        <i class="bi bi-lightning-charge-fill display-4 mb-3"></i>
        <h4>Fast Build</h4>
        <p class="mb-0">Lightning-fast development with hot reloading and optimized production builds</p>
      </div>
    </div>
    
    <div class="col-md-4 text-center mb-4">
      <div class="bg-success text-white p-4 rounded-3 shadow">
        <i class="bi bi-puzzle display-4 mb-3"></i>
        <h4>Web Components</h4>
        <p class="mb-0">Interactive Lit elements ready to use and customize for your project</p>
      </div>
    </div>
    
    <div class="col-md-4 text-center mb-4">
      <div class="bg-info text-white p-4 rounded-3 shadow">
        <i class="bi bi-bootstrap-fill display-4 mb-3"></i>
        <h4>Bootstrap 5</h4>
        <p class="mb-0">Complete responsive framework with icons and JavaScript components</p>
      </div>
    </div>
  </section>

  <!-- Interactive Demo Section -->
  <section class="row mb-5">
    <div class="col-12 text-center mb-4">
      <h2 class="display-6 fw-bold text-dark mb-3">
        <i class="bi bi-stars text-success me-3"></i>Interactive Components Demo
      </h2>
      <p class="lead text-muted">See what's included out of the box</p>
    </div>
    
    <!-- Counter Widget Demo -->
    <div class="col-lg-6 mb-4">
      <div class="bg-dark text-white p-4 rounded-3">
        <h5 class="text-warning mb-3">
          <i class="bi bi-calculator me-2"></i>Counter Widget
        </h5>
        <p class="text-white-75 mb-3">Interactive Lit web component with state management:</p>
        <div class="text-center">
          {% counter 0, "warning" %}
        </div>
      </div>
    </div>
    
    <!-- Bootstrap Demo -->
    <div class="col-lg-6 mb-4">
      <div class="bg-success text-white p-4 rounded-3">
        <h5 class="mb-3">
          <i class="bi bi-bootstrap me-2"></i>Bootstrap Components
        </h5>
        <p class="opacity-75 mb-3">Tooltips, popovers, and more:</p>
        <div class="d-flex flex-wrap gap-2">
          <button class="btn btn-light text-dark" data-bs-toggle="tooltip" data-bs-placement="top" title="This is a tooltip">
            Tooltip Example
          </button>
          <button class="btn btn-outline-light" data-bs-toggle="popover" data-bs-placement="top"
                  data-bs-title="Popover Example"
                  data-bs-content="This is a Bootstrap popover with custom content!">
            Popover Example
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Getting Started Section -->
  <section class="row mb-5 py-5 bg-light rounded-3">
    <div class="col-12 text-center mb-5">
      <h2 class="display-6 fw-bold text-dark mb-3">
        <i class="bi bi-rocket-takeoff text-primary me-3"></i>Get Started
      </h2>
      <p class="lead text-muted">Ready to customize this starter for your project</p>
    </div>
    
    <div class="col-lg-6 mb-4">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex align-items-start mb-3">
            <i class="bi bi-gear-fill text-primary fs-2 me-3"></i>
            <div>
              <h5 class="card-title text-dark fw-bold">Customize</h5>
              <span class="badge bg-primary">Easy Setup</span>
            </div>
          </div>
          <p class="card-text text-muted">
            Update the site data, colors, and content to match your brand. 
            <strong class="text-dark">Everything is ready to customize.</strong>
          </p>
        </div>
      </div>
    </div>
    
    <div class="col-lg-6 mb-4">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex align-items-start mb-3">
            <i class="bi bi-code-slash text-success fs-2 me-3"></i>
            <div>
              <h5 class="card-title text-dark fw-bold">Develop</h5>
              <span class="badge bg-success">Ready to Go</span>
            </div>
          </div>
          <p class="card-text text-muted">
            Run <code>npm run dev</code> and start building your site with hot reloading.
            <strong class="text-dark">Fast development workflow.</strong>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="text-center py-5 bg-primary rounded-3">
    <div class="container">
      <h3 class="display-6 fw-bold text-white mb-3">Ready to Start Building?</h3>
      <p class="lead text-white mb-4">This starter includes everything you need for modern web development.</p>
      <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a href="/blog/" class="btn btn-light btn-lg">
          <i class="bi bi-journal-text me-2"></i>View Blog
        </a>
        <button class="btn btn-outline-light btn-lg">
          <i class="bi bi-github me-2"></i>GitHub
        </button>
      </div>
    </div>
  </section>

</div>